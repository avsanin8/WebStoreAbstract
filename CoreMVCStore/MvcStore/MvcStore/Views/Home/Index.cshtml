</div>
<script src="~/js/anime.min.js"></script>
<script>    
    var BlockMovement = anime({
        targets: '#AnimeBlock',
        translateX: -40,
        translateY: +40,
        autoplay: false,
        easing: 'linear',
        duration: 2000,
        direction: 'alternate',
        scale: {
            value: 1.8,
            duration: 500,
            delay: 880,
            easing: 'easeInOutQuart'
        },
        rotate:'1turn'
    });

    document.querySelector('.roundButton').onpointerenter = BlockMovement.restart;
</script>
    
