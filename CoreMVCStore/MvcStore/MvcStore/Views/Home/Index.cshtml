@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/Holiday_Merry_Christmas.svg" alt="baner0" class="img-responsive" /> @*baner0*@
            <div class="carousel-caption" role="option">
                <p>
                    <font size="4" color="blue" face="Verdana">
                        Simple SVG file
                    </font>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/MolecularShema.svg" alt="baner1" class="img-responsive" /> @*baner1*@
            <div class="carousel-caption" role="option">
                <p>
                    <font size="4" color="#6e75cc" face="Verdana">
                        Simple SVG file
                    </font>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Animated_analog_SVG_clock.svg" alt="baner2" class="img-responsive" /> @*baner2*@
            <div class="carousel-caption" role="option">
                <p>
                    <font size="4" color="#660404" face="Bazooka" font-style="italic">
                        Simple animated SVG file
                    </font>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/Household word.svg" alt="baner3" class="img-responsive" /> @*baner3*@
            <div class="carousel-caption" role="option">
                <p>
                    <font size="4" color="#0063" face="Verdana">
                        Simple animated SVG file
                    </font>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<br/>
<div>
    @*<a asp-controller="Products" asp-action="Index" class="roundButton" id="AnimeBlock">Store</a>*@
    <div id="body_button">
        <div class="button_hola" onclick="location.href='@Url.Action("Index", "Products")'"><span>Store</span></div>
    </div>
    <p>
        On this site you can (view / add / delete / edit / load) different products (for this go to the "Store"-section or press the button)<br />
        The site was provided to demonstrate the technology ASP.NET MVC Core 2.0<br />
        and migrated to last version netcoreapp2.1 <br />
    </p>

</div>
