@model DataAnnotations.Models.Product

@{
    ViewBag.Title = "Create";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Products</h2>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.Name, "Название Products")
    <br />
    @Html.EditorFor(model => model.Name)
    <br /><br />
    @Html.LabelFor(model => model.Manufacture, "Manufacture")
    <br />
    @Html.EditorFor(model => model.Manufacture)
    <br /><br />
    @Html.LabelFor(model => model.Price, "Price")
    <br />
    @Html.EditorFor(model => model.Price)
    <br /><br />
    <input type="submit" value="Добавить" />
}
