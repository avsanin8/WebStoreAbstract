@using WebUI.Models
@model ProductsListViewModel

@{
    ViewBag.Title = "List of Products";
}

@foreach (var p in Model.Products)
{
    @Html.Partial("_ProductSummary", p) @*Рекомендуемый прием (использование частичного представления)*@
}

<div class="btn-group pull-right">
    <h4>
        @Html.PageLinks(Model.PagingInfo, x => Url.Action("List", new { page = x, categ = Model.CurrentCategory }))
    </h4>
</div>