@{
    ViewBag.Title = "Shop products";
}

@model IEnumerable<Website.Models.User>

<div class="jumbotron">
    <h1>Written by someone in C# with ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<p><a href="/Home/Create">Add Product (Create)</a></p>

<div>
    <h3>Sale</h3>
    <table>
        <tr>
            <td><p>Name of product</p></td>
            <td><p>Manufacture</p></td>
            <td><p>Price</p></td>
            <td><p></p></td>
        </tr>
        @foreach (var a in ViewBag.Products)
        {
            <tr>
                <td><p>@a.Name</p></td>
                <td><p>@a.Manufacture</p></td>
                <td><p>@a.Price</p></td>
                <td><p><a href="/Home/Buy/@a.Id">Buy</a>
                    <br /><a href="/Home/Delete">Delete</a><br />
                        <a href="/Home/Edit">Edit</a></p></td>
            </tr>
        }
    </table>

    <br />
    <br />
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team.Id)
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                </td>
            </tr>
        }
    </table>
</div>

